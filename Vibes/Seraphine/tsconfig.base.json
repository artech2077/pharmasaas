{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@pharmasaas/domain": ["packages/domain/src"],
      "@pharmasaas/db": ["packages/db/src"],
      "@pharmasaas/ui": ["packages/ui/src"],
      "@pharmasaas/config": ["packages/config/src"],
      "@pharmasaas/clients": ["packages/clients/src"]
    }
  }
}
